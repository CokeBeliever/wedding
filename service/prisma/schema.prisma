// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Platform {
  H5
  WEI_XIN
  APP
}

/// 用户表
model User {
  /// 唯一标识
  userId Int @id @default(autoincrement())

  /// 用户平台
  platform    Platform @default(H5)
  /// 用户名
  username    String?
  /// 手机号码
  phoneNumber String?

  /// H5/APP: 电子邮箱
  email    String? @unique
  /// H5/APP: 密码
  password String?

  /// 微信: 用户唯一标识
  openid String? @unique

  /// 创建时间
  createdAt DateTime @default(now())
  /// 更新时间
  updatedAt DateTime @updatedAt

  weddingMessage WeddingMessage[]
  Wedding        Wedding[]
}

/// 主题表
model Theme {
  /// 唯一标识
  themeId Int @id @default(autoincrement())

  /// 主题名称
  name        String
  /// 主题描述
  description String
  /// 主题内容
  content     Json

  /// 封面图文件唯一标识
  coverImageId Int
  coverImage   File @relation(fields: [coverImageId], references: [fileId])

  /// 创建时间
  createdAt DateTime @default(now())
  /// 更新时间
  updatedAt DateTime @updatedAt

  Wedding Wedding[]
}

/// 婚柬表
model Wedding {
  /// 唯一标识
  weddingId Int @id @default(autoincrement())

  /// 主题唯一标识
  themeId   Int
  theme     Theme @relation(fields: [themeId], references: [themeId])
  /// 主题数据
  themeData Json

  /// 创建用户唯一标识
  userId Int
  user   User @relation(fields: [userId], references: [userId])

  /// 创建时间
  createdAt DateTime @default(now())
  /// 更新时间
  updatedAt DateTime @updatedAt

  weddingMessage WeddingMessage[]
}

/// 婚柬留言表
model WeddingMessage {
  /// 唯一标识
  widdingMessageId Int @id @default(autoincrement())

  /// 婚柬唯一标识
  weddingId Int
  wedding   Wedding @relation(fields: [weddingId], references: [weddingId])

  /// 留言用户唯一标识
  userId Int
  user   User @relation(fields: [userId], references: [userId])

  /// 留言内容
  content String

  /// 创建时间
  createdAt DateTime @default(now())
  /// 更新时间
  updatedAt DateTime @updatedAt
}

/// 文件表
model File {
  /// 唯一标识
  fileId Int @id @default(autoincrement())

  /// 上传文件名称
  originalname String
  /// 上传文件大小
  size         Int
  /// 上传文件类型
  mimetype     String
  /// 保存文件名称
  filename     String
  /// 保存文件目录
  destination  String
  /// 保存文件路径
  path         String @unique

  /// 创建时间
  createdAt DateTime @default(now())
  /// 更新时间
  updatedAt DateTime @updatedAt

  Theme Theme[]
}
